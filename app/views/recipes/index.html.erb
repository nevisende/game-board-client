
<div class="text-center">
  <h1>My list of Recipes</h1>
</div>
<div class="text-end me-4">

  <%= link_to 'Add a new recipe', new_recipe_path, class: 'text-end btn btn-primary'%>

</div>
<% @recipes.each do |recipe| %>
  <div class="card mt-4 mx-4">
    <div class="row p-4">
      <div class="col-4">
        <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
        <%= button_to 'Delete', recipe_path(recipe.id), method: :delete, class: 'btn btn-danger mt-1'%>
      </div>
      <div class="col-8">
        <p class="fs-5"><%= recipe.description %></p>
      </div>
    </div>
  </div>
<% end %>

