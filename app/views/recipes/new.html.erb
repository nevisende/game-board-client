 
  <h1 class="page-header text-center">Create New Recipe</h1>
  
  <%= form_with model: @recipes, url:recipes_path, scope: :recipe, method: :post, data: { turbo: false }, class: "m-4" do |form| %>
    <div class="input textarea">
      <%= form.label :name %>
      <%= form.text_field :name,  class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :preparation_time_in_minutes %>
      <%= form.number_field :preparation_time_in_minutes, class: "form-control" %>
    </div>
    <div class="input textarea mt-3">
      <%= form.label :cooking_time_in_minutes %>
      <%= form.number_field :cooking_time_in_minutes, class: "form-control" %>
    </div>
    <div class=" mt-3">
      <%= form.label :how_to.. %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-check form-switch mt-3">
      <%= form.check_box :public, class: "form-check-input", type: "checkbox", id: "flexSwitchCheckDefault" %>
      <%= form.label "Public", for: "flexSwitchCheckDefault" %>
    </div>
    <div class="submit mt-3">
      <%= form.submit "Submit", class: "btn btn-dark" %>
    </div>
  <% end %>
