<section class="container w-50 mx-auto mt-4">
 <h2 class="fs-1 text-center fw-bold mt-4">Public Recipes</h2>
  <div>
    
      <% @recipes.each do |recipe| %>
        <div class="card mt-4 mx-4">
          <div class="row p-4">
            <div class="col-4">
              <h3><%= link_to recipe.name, recipe_path(recipe.id) %></h3>
              <span class="fw-bold">By: <%= recipe.user.email %></span>
            </div>
            <div class="col-8">
              <span class="card-text">Total food items: <%= recipe.cooking_time %> </span><br>
              <span class="card-text">Total price: <%= recipe.preparation_time %> $</span>
            </div>
          </div>
        </div>
      <% end %>
        
  </div>
</section>